# Jitsi Meet 环境配置模板
# 复制此文件为 .env 并根据实际情况修改配置

# 基础配置
COMPOSE_PROJECT_NAME=jitsi-meet
CONFIG=./config

# 域名和网络配置 (必须修改)
# 您的域名
PUBLIC_URL=https://your-domain.com
# 服务器公网IP地址
DOCKER_HOST_ADDRESS=192.168.1.100

# 端口配置
HTTP_PORT=8000
HTTPS_PORT=8443
JVB_PORT=10000

# 功能开关
# 是否启用认证 (0=关闭, 1=开启)
ENABLE_AUTH=0
# 是否允许访客 (0=关闭, 1=开启)
ENABLE_GUESTS=1
# 是否启用等候室 (0=关闭, 1=开启)
ENABLE_LOBBY=1
# 是否启用录制 (0=关闭, 1=开启)
ENABLE_RECORDING=0

# 会议配置
# 默认视频分辨率 (360, 720, 1080)
RESOLUTION=720
# 超过多少人自动静音麦克风
START_AUDIO_MUTED=10
# 超过多少人自动关闭摄像头
START_VIDEO_MUTED=10
# 单个会议室最大参与者数量
MAX_BRIDGE_PARTICIPANTS=50

# 安全密钥 (部署时自动生成，请勿手动修改)
JICOFO_COMPONENT_SECRET=CHANGE_ME
JICOFO_AUTH_PASSWORD=CHANGE_ME
JVB_AUTH_PASSWORD=CHANGE_ME
JIBRI_RECORDER_PASSWORD=CHANGE_ME
JIBRI_XMPP_PASSWORD=CHANGE_ME